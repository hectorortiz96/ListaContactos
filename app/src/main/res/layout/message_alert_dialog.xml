<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300sp"
    android:layout_gravity="center">


    <RadioGroup
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:checkedButton="@+id/radioButton5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_Comida"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingTop="10sp"
                android:src="@drawable/comida" />

            <RadioButton
                android:id="@+id/radioButton_comida"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="onRadioButtonClicked" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:gravity="center|start"
                android:text="Necesito comida!"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_Policia"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingTop="10sp"
                android:src="@drawable/emergencia" />

            <RadioButton
                android:id="@+id/radioButton_policia"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="onRadioButtonClicked" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:layout_weight="4.48"
                android:fontFamily="sans-serif"
                android:gravity="center|start"
                android:text="Ocupo a la policia! Llamenla!"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_Hospital"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingTop="10sp"
                android:src="@drawable/hospital" />

            <RadioButton
                android:id="@+id/radioButton_hospital"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="onRadioButtonClicked" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center|start"
                android:text="Necesito atención médica!"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_Tristeza"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingTop="10sp"
                android:src="@drawable/triste" />

            <RadioButton
                android:id="@+id/radioButton_tristeza"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="onRadioButtonClicked" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center|start"
                android:text="Me siento triste!"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>


    </RadioGroup>
</LinearLayout>
