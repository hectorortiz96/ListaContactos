<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="itesm.mx.listacontactos">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.telephony"
        android:required="true"/>
    <uses-feature android:name="android.hardware.camera"
        android:required="true"/>

    <compatible-screens>
        <!-- all small size screens -->
        <screen android:screenSize="small" android:screenDensity="ldpi" />
        <screen android:screenSize="small" android:screenDensity="mdpi" />
        <screen android:screenSize="small" android:screenDensity="hdpi" />
        <screen android:screenSize="small" android:screenDensity="xhdpi" />
        <!-- all normal size screens -->
        <screen android:screenSize="normal" android:screenDensity="ldpi" />
        <screen android:screenSize="normal" android:screenDensity="mdpi" />
        <screen android:screenSize="normal" android:screenDensity="hdpi" />
        <screen android:screenSize="normal" android:screenDensity="xhdpi" />
    </compatible-screens>

    <application
        android:name=".VariablesGlobales"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_logo_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
                  android:hardwareAccelerated="false"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ContactDetails"
            android:label="@string/title_activity_contact_details"
            android:screenOrientation="portrait"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="itesm.mx.listacontactos.MainActivity" />
        </activity>
        <activity android:name=".PermisosActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".AgregarActivity"
            android:label="@string/title_activity_agregar"
            android:screenOrientation="portrait"/>
        <activity android:name=".EliminarActivity"
            android:label="@string/title_activity_eliminar"
            android:screenOrientation="portrait"/>
        <activity android:name=".EditarActivity"
                  android:label="@string/title_activity_editar"
                  android:screenOrientation="portrait"/>
        <activity android:name=".EditarContactoActivity"
                  android:label="@string/title_activity_editarContacto"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ChangePasswordActivity"
            android:label="@string/title_activity_change_password"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>